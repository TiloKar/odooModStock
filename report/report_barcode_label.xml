<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_barcode_label">
  <t t-call="web.html_container">
    <t t-foreach="docs" t-as="doc">
      <table>
        <tr>
          <td colspan="2" style="border-bottom:1pt solid black;">
            <div t-out="doc.name if len(doc.name) &lt; 37 else doc.name[:37]" style="height:5mm;font-size: 4mm';white-space: nowrap;"/>
          </td>
        </tr>
        <tr>
          <td>
            <div t-out="doc.default_code" t-options="{'widget': 'barcode', 'symbology': 'QR', 'img_style': 'height:17mm;width:17mm;'}"/>
          </td>
          <td>
            <div t-field="doc.default_code" style="font-size: 3mm';"/>
            <div t-field="doc.bbiDrawingNb" style="font-size: 3mm';"/>
            <div t-if="doc.detailed_type in ['consu']" style="font-size: 3mm';">
              VERBRAUCHSARTIKEL (roter Punkt)
            </div>
            <div t-if="doc.tracking not in ['none']" style="font-size: 3mm';">
              !! CHARGENVERFOLGUNG !!
            </div>
            <div t-if="doc.bbiStockLocation_id" t-field="doc.bbiStockLocation_id.name" style="font-size: 3mm';"/>
          </td>
        </tr>
      </table>
    </t>
  </t>
</template>
</odoo>
